{
  "dashboard": {
    "title": "VidP Services Monitoring",
    "tags": ["kubernetes", "vidp", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "templating": {
      "list": [
        {
          "current": {
            "text": "default",
            "value": "default"
          },
          "hide": 0,
          "label": "Namespace",
          "name": "namespace",
          "options": [],
          "query": "label_values(kube_pod_info{container!=\"\"}, namespace)",
          "refresh": 1,
          "regex": "",
          "type": "query"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Paquets Réseau Reçus par Seconde (par Pod)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum by (pod) (rate(container_network_receive_packets_total{namespace=\"$namespace\", pod=~\"(animal-detect|downscale|frontend|langscale|main-app|mongodb|subtitle).*\"}[1m]))",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "pps",
            "label": "Paquets/sec"
          },
          {
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 2,
        "title": "Bande Passante Reçue (par Pod)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum by (pod) (rate(container_network_receive_bytes_total{namespace=\"$namespace\", pod=~\"(animal-detect|downscale|frontend|langscale|main-app|mongodb|subtitle).*\"}[1m]))",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "Bps",
            "label": "Octets/sec"
          },
          {
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 3,
        "title": "Utilisation CPU (par Pod)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", pod=~\"(animal-detect|downscale|frontend|langscale|main-app|mongodb|subtitle).*\"}[1m])) * 100",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU %",
            "max": 100
          },
          {
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 4,
        "title": "Utilisation Mémoire (par Pod)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum by (pod) (container_memory_working_set_bytes{namespace=\"$namespace\", pod=~\"(animal-detect|downscale|frontend|langscale|main-app|mongodb|subtitle).*\"}) / 1024 / 1024",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "decmbytes",
            "label": "Mémoire (MB)"
          },
          {
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 5,
        "title": "Paquets Transmis par Seconde (par Pod)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "sum by (pod) (rate(container_network_transmit_packets_total{namespace=\"$namespace\", pod=~\"(animal-detect|downscale|frontend|langscale|main-app|mongodb|subtitle).*\"}[1m]))",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "pps",
            "label": "Paquets/sec"
          },
          {
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 6,
        "title": "Bande Passante Transmise (par Pod)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "sum by (pod) (rate(container_network_transmit_bytes_total{namespace=\"$namespace\", pod=~\"(animal-detect|downscale|frontend|langscale|main-app|mongodb|subtitle).*\"}[1m]))",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "Bps",
            "label": "Octets/sec"
          },
          {
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 7,
        "title": "État des Pods",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "count by (pod) (kube_pod_status_phase{namespace=\"$namespace\", pod=~\"(animal-detect|downscale|frontend|langscale|main-app|mongodb|subtitle).*\", phase=\"Running\"})",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "orientation": "horizontal"
        }
      },
      {
        "id": 8,
        "title": "Nombre de Restarts par Pod",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 28
        },
        "targets": [
          {
            "expr": "sum by (pod) (kube_pod_container_status_restarts_total{namespace=\"$namespace\", pod=~\"(animal-detect|downscale|frontend|langscale|main-app|mongodb|subtitle).*\"})",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Restarts"
          },
          {
            "format": "short"
          }
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "current": true,
          "values": true
        }
      }
    ]
  }
}